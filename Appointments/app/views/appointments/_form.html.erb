  </div>
  <div class="field">
    <%= f.label :patient_id %><br>
    <%= f.select :patient_id, Patient.order(:patient_name).collect{ |p| [p.patient_name, p.id] } %>
  </div>
  <div class="field">
    <%= f.label :appointment_date %><br>
    <%= f.datetime_select :appointment_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
